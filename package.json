{
  "name": "mcp-server-template",
  "version": "1.0.0",
  "description": "A template for creating Model Context Protocol (MCP) servers",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "example-mcp-tool": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18.0.0"
